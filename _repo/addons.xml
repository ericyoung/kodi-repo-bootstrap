<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.name" name="Your Addons Name" version="0.1.0" provider-name="Your Name">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Your Addons Name">
            <info compressed="false">https://raw.githubusercontent.com/ericyoung/kodi-repo-bootstrap/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ericyoung/kodi-repo-bootstrap/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ericyoung/kodi-repo-bootstrap/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A short summary of this addon</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>

